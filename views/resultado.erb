<!DOCTYPE html>
<html lang="pt-br">
<head>
  <meta charset="UTF-8">
  <title>Resultado CPF</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/style.css">
  <style>
    .theme-toggle {
      position: absolute;
      top: 20px;
      right: 20px;
      background: transparent;
      border: none;
      font-size: 1.6rem;
      cursor: pointer;
      transition: transform 0.4s ease, opacity 0.3s;
    }
    .theme-toggle:hover {
      transform: rotate(20deg) scale(1.1);
      opacity: 0.9;
    }
    .fade-icon {
      animation: fadeRotate 0.4s ease;
    }
    @keyframes fadeRotate {
      from { opacity: 0; transform: rotate(-90deg) scale(0.8); }
      to { opacity: 1; transform: rotate(0) scale(1); }
    }
  </style>
</head>

<body class="d-flex align-items-center justify-content-center vh-100">
  <button id="themeToggle" class="theme-toggle" aria-label="Alternar tema">
    üåô
  </button>

  <div class="card shadow-lg p-4 rounded-4 text-center" style="width: 400px;">
    <h2 class="mb-3 text-primary">Resultado da Consulta</h2>

    <% if @valido %>
      <p class="text-success fw-bold">‚úÖ CPF <%= @cpf_formatado %> √© v√°lido!</p>
    <% else %>
      <p class="text-danger fw-bold">‚ùå CPF <%= @cpf_formatado %> √© inv√°lido.</p>
    <% end %>

    <a href="/" class="btn btn-outline-primary mt-3 w-100">Nova consulta</a>
  </div>

  <script>
    const themeToggle = document.getElementById('themeToggle');

    // Altern√¢ncia de tema (mesma l√≥gica da p√°gina inicial)
    const userTheme = localStorage.getItem('theme');
    const systemDark = window.matchMedia('(prefers-color-scheme: dark)').matches;

    function applyTheme(theme) {
      document.documentElement.setAttribute('data-theme', theme);
      themeToggle.textContent = theme === 'dark' ? '‚òÄÔ∏è' : 'üåô';
      themeToggle.classList.add('fade-icon');
      setTimeout(() => themeToggle.classList.remove('fade-icon'), 400);
    }

    if (userTheme) applyTheme(userTheme);
    else applyTheme(systemDark ? 'dark' : 'light');

    themeToggle.addEventListener('click', () => {
      const current = document.documentElement.getAttribute('data-theme');
      const next = current === 'dark' ? 'light' : 'dark';
      localStorage.setItem('theme', next);
      applyTheme(next);
    });
  </script>
</body>
</html>
