<!DOCTYPE html>
<html lang="pt-br">
<head>
  <meta charset="UTF-8">
  <title>Consulta CPF</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/style.css">
  <style>
    .theme-toggle {
      position: absolute;
      top: 20px;
      right: 20px;
      background: transparent;
      border: none;
      font-size: 1.6rem;
      cursor: pointer;
      transition: transform 0.4s ease, opacity 0.3s;
    }
    .theme-toggle:hover {
      transform: rotate(20deg) scale(1.1);
      opacity: 0.9;
    }
    .fade-icon {
      animation: fadeRotate 0.4s ease;
    }
    @keyframes fadeRotate {
      from { opacity: 0; transform: rotate(-90deg) scale(0.8); }
      to { opacity: 1; transform: rotate(0) scale(1); }
    }
  </style>
</head>

<body class="d-flex align-items-center justify-content-center vh-100">
  <button id="themeToggle" class="theme-toggle" aria-label="Alternar tema">
    üåô
  </button>

  <div class="card shadow-lg p-4 rounded-4" style="width: 400px;">
    <h2 class="text-center mb-3 text-primary">üîç Consulta de CPF</h2>

    <form id="cpfForm" action="/validar" method="post">
      <div class="mb-3">
        <label for="cpf" class="form-label">Digite o CPF:</label>
        <input 
          type="text" 
          id="cpf" 
          name="cpf" 
          class="form-control text-center" 
          placeholder="000.000.000-00" 
          maxlength="14" 
          required
        >
      </div>

      <button id="submitBtn" class="btn btn-primary w-100" type="submit">
        Validar CPF
      </button>
    </form>
  </div>

  <script>
    const cpfInput = document.getElementById('cpf');
    const form = document.getElementById('cpfForm');
    const submitBtn = document.getElementById('submitBtn');
    const themeToggle = document.getElementById('themeToggle');

    // M√°scara de CPF
    cpfInput.addEventListener('input', function(e) {
      let value = e.target.value.replace(/\D/g, '');
      if (value.length > 3 && value.length <= 6)
        value = value.replace(/(\d{3})(\d+)/, '$1.$2');
      else if (value.length > 6 && value.length <= 9)
        value = value.replace(/(\d{3})(\d{3})(\d+)/, '$1.$2.$3');
      else if (value.length > 9)
        value = value.replace(/(\d{3})(\d{3})(\d{3})(\d{1,2})/, '$1.$2.$3-$4');
      e.target.value = value;
    });

    // Spinner de carregamento
    form.addEventListener('submit', function(e) {
      submitBtn.innerHTML = `
        <span class="spinner-border spinner-border-sm" role="status" aria-hidden="true"></span>
        Validando CPF...
      `;
      submitBtn.disabled = true;
      setTimeout(() => form.submit(), 800);
      e.preventDefault();
    });

    // Altern√¢ncia de tema
    const userTheme = localStorage.getItem('theme');
    const systemDark = window.matchMedia('(prefers-color-scheme: dark)').matches;

    function applyTheme(theme) {
      document.documentElement.setAttribute('data-theme', theme);
      themeToggle.textContent = theme === 'dark' ? '‚òÄÔ∏è' : 'üåô';
      themeToggle.classList.add('fade-icon');
      setTimeout(() => themeToggle.classList.remove('fade-icon'), 400);
    }

    // Aplica tema inicial
    if (userTheme) applyTheme(userTheme);
    else applyTheme(systemDark ? 'dark' : 'light');

    // Clique para alternar
    themeToggle.addEventListener('click', () => {
      const current = document.documentElement.getAttribute('data-theme');
      const next = current === 'dark' ? 'light' : 'dark';
      localStorage.setItem('theme', next);
      applyTheme(next);
    });
  </script>
</body>
</html>
