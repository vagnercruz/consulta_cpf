<!DOCTYPE html>
<html lang="pt-br">
<head>
  <meta charset="UTF-8">
  <title>Hist√≥rico de Consultas</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/style.css">
  <style>
    table {
      width: 100%;
      border-collapse: collapse;
      margin-top: 1rem;
    }
    th, td {
      padding: 0.6rem;
      text-align: center;
      border-bottom: 1px solid var(--input-border);
    }
    th {
      color: var(--text);
      font-weight: 600;
    }
    td {
      color: var(--text);
    }
    .status-valido {
      color: #28a745;
      font-weight: 600;
    }
    .status-invalido {
      color: #dc3545;
      font-weight: 600;
    }
  </style>
</head>

<body class="d-flex align-items-center justify-content-center vh-100">
  <button id="themeToggle" class="theme-toggle" aria-label="Alternar tema">üåô</button>

  <div class="card shadow-lg p-4 rounded-4" style="width: 600px;">
    <h2 class="text-center text-primary mb-3">üìú Hist√≥rico de Consultas</h2>

    <% if @historico.empty? %>
      <p class="text-center">Nenhuma consulta realizada ainda.</p>
    <% else %>
      <table>
        <thead>
          <tr>
            <th>CPF</th>
            <th>Status</th>
            <th>Data</th>
          </tr>
        </thead>
        <tbody>
          <% @historico.each do |item| %>
            <tr>
              <td><%= item["cpf"] %></td>
              <td class="<%= item["valido"] ? 'status-valido' : 'status-invalido' %>">
                <%= item["valido"] ? "V√°lido" : "Inv√°lido" %>
              </td>
              <td><%= item["data"] %></td>
            </tr>
          <% end %>
        </tbody>
      </table>

      <form action="/historico/limpar" method="post" class="mt-3">
        <button class="btn btn-outline-danger w-100" type="submit">üßπ Limpar hist√≥rico</button>
      </form>
    <% end %>

    <a href="/" class="btn btn-outline-primary mt-3 w-100">‚¨ÖÔ∏è Voltar</a>
  </div>

  <script>
    const themeToggle = document.getElementById('themeToggle');
    const userTheme = localStorage.getItem('theme');
    const systemDark = window.matchMedia('(prefers-color-scheme: dark)').matches;

    function applyTheme(theme) {
      document.documentElement.setAttribute('data-theme', theme);
      themeToggle.textContent = theme === 'dark' ? '‚òÄÔ∏è' : 'üåô';
    }

    if (userTheme) applyTheme(userTheme);
    else applyTheme(systemDark ? 'dark' : 'light');

    themeToggle.addEventListener('click', () => {
      const current = document.documentElement.getAttribute('data-theme');
      const next = current === 'dark' ? 'light' : 'dark';
      localStorage.setItem('theme', next);
      applyTheme(next);
    });
  </script>
</body>
</html>
