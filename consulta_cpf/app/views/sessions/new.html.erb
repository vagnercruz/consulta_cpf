<div class="login-container">
  <h1>Entrar</h1>

  <%= form_with url: login_path, method: :post, class: "login-form" do %>
    <div class="field">
      <label>E-mail</label>
      <%= text_field_tag :email, params[:email], required: true %>
    </div>

    <div class="field">
      <label>Senha</label>
      <%= password_field_tag :password, nil, required: true %>
    </div>

    <%= submit_tag "Entrar", class: "btn-login" %>
  <% end %>
</div>
