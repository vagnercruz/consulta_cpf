<div class="card-custom mx-auto" style="max-width: 800px;">
  <h2 class="text-center mb-4" style="color:var(--primary)">Histórico de Consultas</h2>

  <table class="table table-hover">
    <thead>
      <tr>
        <th>CPF</th>
        <th>Validação</th>
        <th>Data</th>
      </tr>
    </thead>

    <tbody>
      <% @consultas.each do |c| %>
        <tr>
          <td><%= c.cpf %></td>
          <td>
            <% if c.valido %>
              <span class="text-success fw-bold">Válido ✓</span>
            <% else %>
              <span class="text-danger fw-bold">Inválido ✗</span>
            <% end %>
          </td>
          <td><%= c.data.strftime("%d/%m/%Y %H:%M") %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <a href="/" class="btn btn-outline-primary w-100 mt-3">Nova Consulta</a>
</div>
