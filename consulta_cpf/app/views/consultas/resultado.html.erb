<div class="card-custom mx-auto" style="max-width: 500px;">
  <h2 class="text-center mb-4" style="color: var(--primary)">Resultado da Consulta</h2>

  <p><strong>CPF:</strong> <%= @consulta.cpf %></p>

  <p>
    <% if @consulta.valido %>
      <span class="text-success fw-bold">CPF válido ✓</span>
    <% else %>
      <span class="text-danger fw-bold">CPF inválido ✗</span>
    <% end %>
  </p>

  <a href="/" class="btn btn-outline-primary w-100 mt-4">Nova consulta</a>
  <a href="/historico" class="btn btn-primary w-100 mt-3">Ver histórico</a>
</div>
